import java.util.Scanner;
import java.util.Random;
public class Blackjack {
    public void compraCartas() {
        Random random = new Random();
        return random.nextInt(13) + 1;
    }
    public static void main(String[] args) {

        int opcao = 0;
        System.out.println("Seja bem vindo a esse incrivel jogo");
        System.out.println("Deseja jogar?");
        System.out.println("1 - Sim");
        System.out.println("2 - Nao");
        Scanner sc = new Scanner(System.in);
        opcao = sc.nextInt();

        if (opcao == 2) {
            System.out.println("Obrigado por nao jogar!");
        }
        if (opcao == 1) {
            System.out.println("Entao bora!");

            System.out.println("As cartas de Dealer sao:");
            int cartaDealer1 = compraCartas();
            int cartaDealer2 = compraCartas();
            System.out.println("Carta 1: " + cartaDealer1);
            System.out.println("Carta 2: ? ");

            System.out.println("Dealer sorteou duas cartas para o jogador, sao elas:");
            int cartaJogador1 = compraCartas();
            int cartaJogador2 = compraCartas();
            System.out.println("Carta 1: " + cartaJogador1);
            System.out.println("Carta 2: " + cartaJogador2);

            System.out.println("O jogador tem " + (cartaJogador1 + cartaJogador2) + " pontos");
            if ((cartaJogador1 + cartaJogador2) > 21) {
                System.out.println("O jogador perdeu por estourar.");
                System.out.println("Fim de jogo!");
            }
            
        }
        else {
            System.out.println("Nao entendi, tente novamente!");
            return;
        }
}
}